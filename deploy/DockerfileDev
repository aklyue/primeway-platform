FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

ENV HOST=0.0.0.0

# Expose port 3000
EXPOSE 3000

# Start the development server
CMD ["sh", "-c", "HOST=0.0.0.0 npm start"]